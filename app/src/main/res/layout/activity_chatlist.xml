<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="@+id/chatroom_editText"
    app:layout_constraintStart_toEndOf="@+id/chatroom_editText"
    tools:context=".ChatListActivity">
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/chat_listview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatroom_editText" />

    <Button
        android:id="@+id/button_createChatroom"
        android:layout_width="170dp"
        android:layout_height="50dp"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Chatroom 만들기"
        app:layout_constraintBottom_toBottomOf="@+id/chatroom_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chatroom_editText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/chatroom_editText"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"

        android:hint="Chatroom Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#070000"
        android:text="Chat Room List"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/button_createChatroom"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/button_createChatroom"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>